<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="253dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageView4" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editName"
                    android:layout_gravity="center_horizontal"
                    android:text="Tap to change recipe name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editDescription"
                    android:layout_gravity="center_horizontal"
                    android:text="Tap to change description" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="223dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/addIngredienttext"
                        android:text="tap to add ingredient" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Add Ingredient"
                        android:id="@+id/button2"
                        android:clickable="true"
                        android:onClick="addIngredient"
                        android:layout_column="17" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/addTypeText"
                        android:editable="true"
                        android:hint="tap to add type" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Type"
                        android:id="@+id/addType"
                        android:layout_column="17"
                        android:onClick="onClickAddType" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:text="Save"
                        android:id="@+id/button3"
                        android:layout_gravity="right"
                        android:onClick="save"
                        android:layout_column="17" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:weightSum="1">

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>